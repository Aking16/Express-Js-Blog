<div class="row mbn-30">
    <!-- Revenue Statistics Chart Start -->
    <div class="col-md-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h4 class="title">ایجاد پست جدید</h4>
            </div>
            <div class="box-body">
                {{#if error}}
                    <div class="alert alert-danger" role="alert">
                        <p><i class="zmdi zmdi-info"></i> {{ error }}</p>
                    </div>
                {{/if}}

                {{#if success}}
                    <div class="alert alert-success" role="alert">
                        <p><i class="zmdi zmdi-info"></i> {{ success }}</p>
                    </div>
                {{/if}}
                <form action="/admin/posts/store" method="post">
                    <div class="col-12 mb-15"><input type="text" class="form-control" placeholder="عنوان مطلب" name="title"></div>
                    <div class="col-12 mb-15"><input type="text" class="form-control" placeholder="نامک مطلب" name="slug"></div>

                    <div class="col-12 mb-15"><textarea class="form-control" placeholder="محتوای مطلب" name="content"></textarea></div>
                    <div class="col-12 mb-15">
                        <select name="author_id" class="form-control">
                            {{#each users}}
                                <option value="{{ this.id }}">{{ this.full_name }}</option>
                            {{/each}}
                        </select>
                    </div>

                    <h4>وضعیت مطلب</h4>
                    <label for="writemode">
                        پیش نویس
                        <input type="radio" name="status" value="0" id="writemode">
                    </label>
                    <label for="releasemode">
                        منتشر شده
                        <input type="radio" name="status" value="1" id="releasemode">
                    </label>
                    <label for="reviewmod">
                        در حال باز بینی
                        <input type="radio" name="status" value="2" id="reviewmod">
                    </label>
                    <button class="btn btn-danger w-100 mt-10">ذخیره سازی</button>
                </form>
            </div>
        </div>
    </div><!-- Revenue Statistics Chart End -->
</div>